# Backend Environment Variables

# Railway Database (PostgreSQL)
DATABASE_URL=

# Railway Redis
REDIS_URL=

# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,.railway.app
DJANGO_SETTINGS_MODULE=afp_v2.settings

# OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret
MICROSOFT_OAUTH_CLIENT_ID=your-microsoft-client-id
MICROSOFT_OAUTH_CLIENT_SECRET=your-microsoft-client-secret

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=86400

# Email API Configuration
GMAIL_API_CREDENTIALS_FILE=path/to/gmail-credentials.json
OUTLOOK_API_CREDENTIALS_FILE=path/to/outlook-credentials.json

# AI Service Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Celery Configuration (uses REDIS_URL from Railway)
# For local development, use: redis://localhost:6379/0
# For Railway deployment, this will use the REDIS_URL automatically
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Security
ENCRYPTION_KEY=your-encryption-key-for-tokens

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Railway Deployment
RAILWAY_ENVIRONMENT=development
PORT=8000
